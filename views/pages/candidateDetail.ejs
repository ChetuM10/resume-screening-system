<div class="container-fluid py-4">
  <!-- Header Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 mb-1">
            <i class="fas fa-user-circle text-primary"></i>
            Candidate Profile
          </h1>
          <p class="text-muted mb-0">Complete profile information and resume details</p>
        </div>
        <div class="text-end">
          <a href="javascript:history.back()" class="btn btn-outline-secondary me-2">
            <i class="fas fa-arrow-left"></i> Back to Results
          </a>
          <% if (resume && resume._id) { %>
            <a href="/candidate/<%= resume._id %>/download" class="btn btn-primary" target="_blank">
              <i class="fas fa-download"></i> Download Resume
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <% if (resume) { %>
    <div class="row">
      <!-- Left Column - Personal Information -->
      <div class="col-lg-4 mb-4">
        <!-- Basic Info Card -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
              <i class="fas fa-id-card"></i>
              Personal Information
            </h5>
          </div>
          <div class="card-body">
            <div class="text-center mb-4">
              <div class="avatar-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3">
                <i class="fas fa-user fa-2x"></i>
              </div>
              <h4 class="mb-1"><%= resume.candidateName || 'Unknown Candidate' %></h4>
              <p class="text-muted mb-0">
                <%= resume.positions && resume.positions.length > 0 ? resume.positions[0] : 'No position specified' %>
              </p>
            </div>

            <hr>

            <div class="contact-info">
              <% if (resume.email) { %>
                <div class="d-flex align-items-center mb-3">
                  <i class="fas fa-envelope text-primary me-3"></i>
                  <div>
                    <small class="text-muted d-block">Email</small>
                    <a href="mailto:<%= resume.email %>" class="text-decoration-none">
                      <%= resume.email %>
                    </a>
                  </div>
                </div>
              <% } %>

              <% if (resume.phone) { %>
                <div class="d-flex align-items-center mb-3">
                  <i class="fas fa-phone text-primary me-3"></i>
                  <div>
                    <small class="text-muted d-block">Phone</small>
                    <a href="tel:<%= resume.phone %>" class="text-decoration-none">
                      <%= resume.phone %>
                    </a>
                  </div>
                </div>
              <% } %>

              <div class="d-flex align-items-center mb-3">
                <i class="fas fa-briefcase text-primary me-3"></i>
                <div>
                  <small class="text-muted d-block">Experience</small>
                  <span><%= resume.experience?.years || 0 %> years</span>
                </div>
              </div>

              <% if (resume.education?.degree) { %>
                <div class="d-flex align-items-center mb-3">
                  <i class="fas fa-graduation-cap text-primary me-3"></i>
                  <div>
                    <small class="text-muted d-block">Education</small>
                    <span><%= resume.education.degree %></span>
                    <% if (resume.education.institution) { %>
                      <br><small class="text-muted"><%= resume.education.institution %></small>
                    <% } %>
                  </div>
                </div>
              <% } %>

              <div class="d-flex align-items-center">
                <i class="fas fa-file-alt text-primary me-3"></i>
                <div>
                  <small class="text-muted d-block">Resume File</small>
                  <span><%= resume.originalName || 'Unknown filename' %></span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Processing Status Card -->
        <div class="card border-0 shadow-sm">
          <div class="card-header bg-info text-white">
            <h6 class="mb-0">
              <i class="fas fa-cogs"></i>
              Processing Status
            </h6>
          </div>
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span class="text-muted">Processing Status:</span>
              <span class="badge bg-<%= resume.isProcessed ? 'success' : 'warning' %>">
                <%= resume.isProcessed ? 'Processed' : 'Pending' %>
              </span>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span class="text-muted">Skills Extracted:</span>
              <span class="badge bg-info">
                <%= (resume.skills && resume.skills.length) ? resume.skills.length : 0 %>
              </span>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <span class="text-muted">Upload Date:</span>
              <span class="text-muted">
                <%= new Date(resume.createdAt || Date.now()).toLocaleDateString() %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Skills and Resume Content -->
      <div class="col-lg-8">
        <!-- Skills Section -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0">
              <i class="fas fa-code"></i>
              Technical Skills
            </h5>
          </div>
          <div class="card-body">
            <% if (resume.skills && resume.skills.length > 0) { %>
              <div class="skills-container">
                <% resume.skills.forEach((skill, index) => { %>
                  <span class="badge bg-primary me-2 mb-2 skill-badge" style="font-size: 0.9rem;">
                    <i class="fas fa-tag me-1"></i>
                    <%= skill %>
                  </span>
                <% }); %>
              </div>
            <% } else { %>
              <div class="text-center text-muted py-3">
                <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                <p class="mb-0">No skills extracted from resume</p>
                <small>Skills may not have been processed yet or the resume format may not be supported.</small>
              </div>
            <% } %>
          </div>
        </div>

        <!-- Resume Content Section -->
        <div class="card border-0 shadow-sm">
          <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">
              <i class="fas fa-file-text"></i>
              Resume Content
            </h5>
          </div>
          <div class="card-body">
            <% if (resume.extractedText && resume.extractedText.trim()) { %>
              <div class="resume-content">
                <div class="border rounded p-3" style="background-color: #f8f9fa; max-height: 600px; overflow-y: auto;">
                  <pre style="white-space: pre-wrap; font-family: 'Segoe UI', Arial, sans-serif; font-size: 0.9rem; line-height: 1.6; margin: 0;"><%= resume.extractedText %></pre>
                </div>
              </div>
            <% } else { %>
              <div class="text-center text-muted py-4">
                <i class="fas fa-file-excel fa-3x mb-3"></i>
                <h5>No content extracted from resume</h5>
                <p class="mb-0">The resume content could not be extracted or processed.</p>
                <small>This may be due to an unsupported file format or processing error.</small>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  <% } else { %>
    <!-- No Resume Data -->
    <div class="row">
      <div class="col-12">
        <div class="text-center py-5">
          <div class="card border-0 shadow-sm">
            <div class="card-body py-5">
              <i class="fas fa-user-slash fa-4x text-muted mb-4"></i>
              <h3 class="text-muted mb-3">Candidate Not Found</h3>
              <p class="text-muted mb-4">
                The requested candidate profile could not be loaded. The candidate may have been removed or the ID is invalid.
              </p>
              <a href="javascript:history.back()" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Go Back
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>

<style>
.avatar-circle {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  font-size: 2rem;
}

.contact-info .fas {
  width: 20px;
  text-align: center;
}

.skill-badge {
  transition: all 0.3s ease;
}

.skill-badge:hover {
  transform: scale(1.05);
  box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}

.resume-content {
  position: relative;
}

.resume-content pre {
  color: #333;
}

.card {
  transition: all 0.3s ease;
}

.card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important;
}

@media (max-width: 768px) {
  .avatar-circle {
    width: 60px;
    height: 60px;
    font-size: 1.5rem;
  }
  
  .contact-info {
    font-size: 0.9rem;
  }
}
</style>
