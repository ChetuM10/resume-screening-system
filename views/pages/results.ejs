<div class="screening-results">
  <!-- Header Section -->
  <div class="row mb-4">
    <div class="col-12">
      <% if (typeof jobTitle !== 'undefined') { %>
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h1 class="display-6 text-primary mb-2">ğŸ¯ Screening Results</h1>
            <p class="lead mb-0">Position: <strong><%= jobTitle %></strong></p>
          </div>
          <div class="text-end">
            <span class="badge bg-info fs-6 px-3 py-2">
              Found <strong><%= totalCandidates || 0 %></strong> candidates
            </span>
          </div>
        </div>
      <% } else { %>
        <h1 class="display-6 text-primary mb-3">ğŸ“Š Screening Results</h1>
        <div class="alert alert-info">
          <p class="mb-0">Found <strong><%= totalCandidates || 0 %></strong> candidates in database</p>
        </div>
      <% } %>
    </div>
  </div>
  
  <!-- Results Grid -->
  <% if (results && results.length > 0) { %>
    <div class="row g-4">
      <% results.forEach((r, i) => { %>
        <div class="col-xl-4 col-lg-6 col-md-6">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-header bg-gradient bg-primary text-white">
              <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0 text-white"><%= r.candidateName || 'Unknown Candidate' %></h5>
                <div>
                  <span class="badge bg-light text-primary me-2">Score: <%= r.matchScore || r.score || 0 %>%</span>
                  <span class="badge bg-warning text-dark">Rank: #<%= r.overallRank || (i+1) %></span>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-12 mb-3">
                  <div class="d-flex align-items-center mb-2">
                    <i class="fas fa-envelope text-primary me-2"></i>
                    <strong>Email:</strong>
                    <span class="ms-2"><%= r.email %></span>
                  </div>
                  <div class="d-flex align-items-center mb-2">
                    <i class="fas fa-phone text-success me-2"></i>
                    <strong>Phone:</strong>
                    <span class="ms-2"><%= r.phone %></span>
                  </div>
                </div>
                
                <% if (r.reasons && r.reasons.length > 0) { %>
                  <div class="col-12">
                    <h6 class="text-muted mb-2">ğŸ” Match Reasons:</h6>
                    <ul class="list-unstyled mb-3">
                      <% r.reasons.forEach(reason => { %>
                        <li class="text-success mb-1">
                          <i class="fas fa-check-circle me-2"></i><%= reason %>
                        </li>
                      <% }) %>
                    </ul>
                  </div>
                <% } %>
              </div>
            </div>
            <div class="card-footer bg-transparent border-top-0">
              <div class="d-flex justify-content-between">
                <button class="btn btn-primary btn-sm">
                  <i class="fas fa-eye me-1"></i>View Details
                </button>
                <button class="btn btn-outline-success btn-sm">
                  <i class="fas fa-download me-1"></i>Download Resume
                </button>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="row">
      <div class="col-12">
        <div class="alert alert-warning border-0 shadow-sm">
          <div class="text-center py-4">
            <i class="fas fa-search fa-3x text-warning mb-3"></i>
            <h4>No Results Found</h4>
            <p class="mb-3">No candidates match your screening criteria.</p>
            <p class="text-muted">Try adjusting your requirements or upload more resumes.</p>
          </div>
        </div>
      </div>
    </div>
  <% } %>
  
  <!-- Action Buttons -->
  <div class="row mt-5">
    <div class="col-12 text-center">
      <a href="/screening" class="btn btn-success btn-lg me-3">
        <i class="fas fa-arrow-left me-2"></i>Back to Screening
      </a>
      <a href="/dashboard" class="btn btn-info btn-lg">
        <i class="fas fa-chart-dashboard me-2"></i>Dashboard
      </a>
    </div>
  </div>
</div>
