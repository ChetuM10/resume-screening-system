<!-- Candidates Grid - 3 Column Layout -->
<div class="container">
  <div class="page-header">
    <h1 class="page-title">
      <i class="fas fa-users"></i>
      All Candidates
    </h1>
    <p class="page-description">Browse all processed candidate resumes</p>
  </div>

  <% if (resumes && resumes.length > 0) { %>
  <!-- Candidates Grid -->
  <div class="candidates-grid">
    <% resumes.forEach(function(resume) { %>
    <div class="candidate-card">
      <!-- Card Header -->
      <div class="candidate-card-header">
        <div class="candidate-avatar">
          <i class="fas fa-user"></i>
        </div>
        <div class="candidate-basic-info">
          <h3 class="candidate-name">
            <%= resume.candidateName || 'Unknown' %>
          </h3>
          <% if (resume.bestJobMatch) { %>
          <span class="job-match-badge"> <%= resume.bestJobMatch %> </span>
          <% } %>
        </div>
        <% if (resume.bestMatchScore) { %>
        <div class="match-score-badge">
          <%= Math.round(resume.bestMatchScore) %>%
        </div>
        <% } %>
      </div>

      <!-- Contact Info -->
      <div class="candidate-contact">
        <% if (resume.email) { %>
        <div class="contact-item">
          <i class="fas fa-envelope"></i>
          <span><%= resume.email %></span>
        </div>
        <% } %> <% if (resume.phone) { %>
        <div class="contact-item">
          <i class="fas fa-phone"></i>
          <span><%= resume.phone %></span>
        </div>
        <% } %>
      </div>

      <!-- Top Skills -->
      <div class="candidate-skills">
        <label class="skills-label">
          <i class="fas fa-code"></i>
          Top Skills:
        </label>
        <div class="skills-tags">
          <% if (resume.skills && resume.skills.length > 0) { %> <%
          resume.skills.slice(0, 3).forEach(function(skill) { %>
          <span class="skill-tag"><%= skill %></span>
          <% }); %> <% if (resume.skills.length > 3) { %>
          <span class="skill-more">+<%= resume.skills.length - 3 %> more</span>
          <% } %> <% } else { %>
          <span class="text-muted">No skills listed</span>
          <% } %>
        </div>
      </div>

      <!-- Multi-Job Scores -->
      <% if (resume.jobMatches && resume.jobMatches.length > 0) { %>
      <div class="job-matches-section">
        <label class="matches-label">
          <i class="fas fa-briefcase"></i>
          Multi-Job Scores:
        </label>
        <div class="job-matches-list">
          <% resume.jobMatches.forEach(function(match) { %>
          <div class="job-match-item">
            <span class="job-title"><%= match.jobTitle %></span>
            <div class="match-progress">
              <% var barColor = '#fb923c'; if (match.score >= 80) { barColor =
              '#10b981'; } else if (match.score >= 50) { barColor = '#06b6d4'; }
              %>
              <div
                class="match-progress-bar"
                style="
                  width: '<%= match.score %>%';
                  background-color: '<%= barColor %>';
                "
              ></div>
            </div>
            <span class="match-score-text"
              ><%= Math.round(match.score) %>%</span
            >
          </div>
          <% }); %>
        </div>
      </div>
      <% } %>

      <!-- Card Actions -->
      <div class="candidate-card-actions">
        <a href="/candidate/<%= resume._id %>" class="btn-view-details">
          <i class="fas fa-eye"></i>
          View Details
        </a>
        <button
          class="btn-download"
          onclick="downloadResume('<%= resume._id %>')"
        >
          <i class="fas fa-download"></i>
        </button>
      </div>
    </div>
    <% }); %>
  </div>
  <% } else { %>
  <!-- Empty State -->
  <div class="empty-state">
    <div class="empty-icon">
      <i class="fas fa-inbox"></i>
    </div>
    <h3 class="empty-title">No Candidates Found</h3>
    <p class="empty-description">Upload resumes to see candidates here</p>
    <a href="/upload" class="btn-modern btn-gradient-purple">
      <i class="fas fa-upload"></i>
      Upload Resumes
    </a>
  </div>
  <% } %>
</div>

<!-- Candidate Card Styles -->
<style>
  /* Candidates Grid - 3 Column Layout */
  .candidates-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-top: 2rem;
  }

  /* Candidate Card */
  .candidate-card {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
    border: 1px solid rgba(102, 126, 234, 0.1);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .candidate-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-xl);
    border-color: var(--accent-purple);
  }

  /* Card Header */
  .candidate-card-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(102, 126, 234, 0.1);
    position: relative;
  }

  .candidate-avatar {
    width: 50px;
    height: 50px;
    background: var(--gradient-purple);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .candidate-basic-info {
    flex: 1;
    min-width: 0;
  }

  /* ✅ WHITE TEXT FOR CANDIDATE NAME */
  .candidate-name {
    font-size: 1.1rem;
    font-weight: 700;
    color: #ffffff !important;
    margin: 0 0 0.5rem 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .job-match-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: rgba(6, 182, 212, 0.1);
    color: var(--accent-teal);
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
  }

  .match-score-badge {
    position: absolute;
    top: 0;
    right: 0;
    background: var(--gradient-purple);
    color: white;
    padding: 0.35rem 0.75rem;
    border-radius: var(--radius-full);
    font-size: 0.9rem;
    font-weight: 700;
    box-shadow: var(--shadow-md);
  }

  /* Contact Info */
  .candidate-contact {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #e2e8f0;
    font-size: 0.85rem;
  }

  .contact-item i {
    color: var(--accent-purple);
    width: 16px;
  }

  .contact-item span {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #e2e8f0;
  }

  /* Skills Section */
  .candidate-skills {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .skills-label {
    font-size: 0.85rem;
    font-weight: 600;
    color: #ffffff;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0;
  }

  .skills-label i {
    color: var(--accent-purple);
  }

  .skills-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-tag {
    padding: 0.35rem 0.75rem;
    background: rgba(102, 126, 234, 0.1);
    color: var(--accent-purple);
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
  }

  .skill-more {
    padding: 0.35rem 0.75rem;
    background: rgba(251, 146, 60, 0.1);
    color: var(--accent-orange);
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
  }

  /* Job Matches Section */
  .job-matches-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .matches-label {
    font-size: 0.85rem;
    font-weight: 600;
    color: #ffffff;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0;
  }

  .matches-label i {
    color: var(--accent-teal);
  }

  .job-matches-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .job-match-item {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .job-title {
    font-size: 0.85rem;
    font-weight: 600;
    color: #cbd5e0;
  }

  .match-progress {
    height: 6px;
    background: rgba(102, 126, 234, 0.1);
    border-radius: var(--radius-full);
    overflow: hidden;
  }

  .match-progress-bar {
    height: 100%;
    border-radius: var(--radius-full);
    transition: width var(--transition-base);
  }

  .match-score-text {
    font-size: 0.75rem;
    font-weight: 700;
    color: #ffffff;
  }

  /* Card Actions */
  .candidate-card-actions {
    display: flex;
    gap: 0.75rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(102, 126, 234, 0.1);
  }

  .btn-view-details {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: var(--gradient-purple);
    color: white;
    text-decoration: none;
    border-radius: var(--radius-md);
    font-weight: 600;
    font-size: 0.9rem;
    transition: all var(--transition-base);
  }

  .btn-view-details:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .btn-download {
    width: 45px;
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(102, 126, 234, 0.1);
    color: var(--accent-purple);
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .btn-download:hover {
    background: var(--accent-purple);
    color: white;
  }

  /* ✅ MUTED TEXT COLOR FIX */
  .text-muted {
    color: #94a3b8 !important;
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .candidates-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .candidates-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  function downloadResume(resumeId) {
    window.location.href = "/resume/download/" + resumeId;
  }
</script>
