<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/modern-dashboard.css" rel="stylesheet">
    <style>
        .delete-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #dc3545;
            border: none;
            color: white;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            opacity: 0;
            z-index: 10;
        }
        
        .resume-card {
            position: relative;
            background: white;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
            border-left: 4px solid #28a745;
        }
        
        .resume-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }
        
        .resume-card:hover .delete-btn {
            opacity: 1;
        }
        
        .delete-btn:hover {
            background: #c82333;
            transform: scale(1.1);
        }
        
        .bulk-actions {
            margin-bottom: 2rem;
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }
        
        .danger-btn {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
        }
        
        .danger-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(220, 53, 69, 0.4);
            color: white;
        }

        .processed-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
            box-shadow: 0 2px 8px rgba(40, 167, 69, 0.3);
        }

        .delete-animation {
            animation: fadeOut 0.5s ease-out forwards;
        }

        @keyframes fadeOut {
            from { opacity: 1; transform: scale(1); }
            to { opacity: 0; transform: scale(0.8); }
        }

        .resume-info-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.3rem;
            font-size: 0.9rem;
        }

        .resume-info-item i {
            width: 16px;
            text-align: center;
        }

        .skill-badge.bg-secondary {
            background: #6c757d !important;
        }

        .text-muted.small {
            font-style: italic;
            margin-top: 0.5rem;
        }

        .processing-info {
            background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            margin-bottom: 1rem;
            text-align: center;
        }

        .processing-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
            gap: 0.5rem;
            margin: 1rem 0;
        }

        .processing-stat {
            text-align: center;
            padding: 0.5rem;
            background: rgba(255,255,255,0.1);
            border-radius: 8px;
        }

        .processing-stat-number {
            font-size: 1.2rem;
            font-weight: 700;
            display: block;
        }

        .processing-stat-label {
            font-size: 0.7rem;
            opacity: 0.9;
            text-transform: uppercase;
        }

        .ml-info {
            background: linear-gradient(135deg, #6f42c1 0%, #563d7c 100%);
            color: white;
            padding: 0.4rem 0.8rem;
            border-radius: 12px;
            font-size: 0.8rem;
            margin-top: 0.5rem;
            display: inline-block;
        }

        .quality-indicator {
            position: absolute;
            top: 50px;
            left: 10px;
            padding: 0.2rem 0.6rem;
            border-radius: 10px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .quality-high { background: #d4edda; color: #155724; }
        .quality-medium { background: #fff3cd; color: #856404; }
        .quality-low { background: #f8d7da; color: #721c24; }

        .loading-resume {
            opacity: 0.6;
            pointer-events: none;
            position: relative;
        }

        .loading-resume::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 30px;
            height: 30px;
            border: 3px solid #f3f3f3;
            border-top: 3px solid #28a745;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: translate(-50%, -50%) rotate(0deg); }
            100% { transform: translate(-50%, -50%) rotate(360deg); }
        }

        .reprocess-btn {
            background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
            border: none;
            color: white;
            padding: 0.4rem 1rem;
            border-radius: 20px;
            font-size: 0.8rem;
            transition: all 0.3s ease;
            margin-left: 0.5rem;
        }

        .reprocess-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(255, 193, 7, 0.4);
            color: white;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Back Button -->
        <a href="/" class="back-button">
            <i class="fas fa-arrow-left"></i>
            Back to Dashboard
        </a>

        <!-- Header -->
        <div class="detail-header">
            <h1 class="detail-title">
                <i class="fas fa-check-circle text-success me-3"></i>
                <%= pageTitle %>
            </h1>
            <p class="detail-subtitle"><%= pageSubtitle %></p>
        </div>

        <!-- Processing Summary -->
        <% if (resumes && resumes.length > 0) { %>
            <div class="processing-info">
                <h5 class="mb-0">
                    <i class="fas fa-cogs me-2"></i>
                    Processing Complete
                </h5>
                <div class="processing-stats">
                    <div class="processing-stat">
                        <span class="processing-stat-number"><%= resumes.length %></span>
                        <span class="processing-stat-label">Processed</span>
                    </div>
                    <div class="processing-stat">
                        <span class="processing-stat-number">
                            <%= resumes.filter(r => r.skills && r.skills.length > 0).length %>
                        </span>
                        <span class="processing-stat-label">With Skills</span>
                    </div>
                    <div class="processing-stat">
                        <span class="processing-stat-number">
                            <%= resumes.filter(r => r.email && r.email.length > 0).length %>
                        </span>
                        <span class="processing-stat-label">With Contact</span>
                    </div>
                    <div class="processing-stat">
                        <span class="processing-stat-number">
                            <%= resumes.filter(r => r.mlCategory).length %>
                        </span>
                        <span class="processing-stat-label">ML Classified</span>
                    </div>
                </div>
            </div>

            <!-- Bulk Actions -->
            <div class="bulk-actions">
                <button id="bulkDeleteBtn" class="danger-btn">
                    <i class="fas fa-trash-alt"></i>
                    Delete All Processed
                </button>
                <button id="reprocessAllBtn" class="btn btn-warning">
                    <i class="fas fa-redo"></i>
                    Reprocess All
                </button>
                <button onclick="location.reload()" class="btn btn-outline-secondary">
                    <i class="fas fa-sync-alt"></i>
                    Refresh
                </button>
            </div>
        <% } %>

        <!-- Resumes List -->
        <div class="row" id="resumesList">
            <% if (resumes && resumes.length > 0) { %>
                <% resumes.forEach(resume => { %>
                    <div class="col-md-6 col-lg-4 mb-4" data-resume-id="<%= resume._id %>">
                        <div class="resume-card">
                            <!-- Processed Badge -->
                            <div class="processed-badge">
                                <i class="fas fa-check"></i> Processed
                            </div>

                            <!-- Quality Indicator -->
                            <% if (resume.extractionQuality) { %>
                                <div class="quality-indicator quality-<%= resume.extractionQuality %>">
                                    <%= resume.extractionQuality.charAt(0).toUpperCase() + resume.extractionQuality.slice(1) %> Quality
                                </div>
                            <% } %>
                            
                            <!-- Delete Button -->
                            <button class="delete-btn" 
                                    data-resume-id="<%= resume._id %>" 
                                    data-candidate-name="<%= resume.candidateName || 'Unknown Candidate' %>" 
                                    title="Delete Resume">
                                <i class="fas fa-times"></i>
                            </button>
                            
                            <h5 class="resume-name" style="margin-top: 1rem;">
                                <%= resume.candidateName && resume.candidateName !== 'Unknown Candidate' ? resume.candidateName : 'Name not extracted' %>
                            </h5>
                            
                            <div class="resume-info">
                                <% if (resume.email && resume.email.length > 0) { %>
                                    <div class="resume-info-item">
                                        <i class="fas fa-envelope text-primary"></i>
                                        <span><%= resume.email %></span>
                                    </div>
                                <% } else { %>
                                    <div class="resume-info-item">
                                        <i class="fas fa-envelope-open text-muted"></i>
                                        <span class="text-muted">Email not found</span>
                                    </div>
                                <% } %>
                                
                                <% if (resume.phone && resume.phone.length > 0) { %>
                                    <div class="resume-info-item">
                                        <i class="fas fa-phone text-success"></i>
                                        <span><%= resume.phone %></span>
                                    </div>
                                <% } else { %>
                                    <div class="resume-info-item">
                                        <i class="fas fa-phone-slash text-muted"></i>
                                        <span class="text-muted">Phone not found</span>
                                    </div>
                                <% } %>
                                
                                <div class="resume-info-item">
                                    <i class="fas fa-clock text-info"></i>
                                    <span>Processed: <%= resume.processedAt ? resume.processedAt.toLocaleDateString() : (resume.createdAt ? resume.createdAt.toLocaleDateString() : 'Unknown') %></span>
                                </div>
                                
                                <% if (resume.experience && resume.experience.years > 0) { %>
                                    <div class="resume-info-item">
                                        <i class="fas fa-briefcase text-info"></i>
                                        <span><%= resume.experience.years %> years experience</span>
                                    </div>
                                <% } else { %>
                                    <div class="resume-info-item">
                                        <i class="fas fa-user-graduate text-muted"></i>
                                        <span class="text-muted">Experience not specified</span>
                                    </div>
                                <% } %>

                                <% if (resume.education && resume.education.degree && resume.education.degree !== 'Not specified') { %>
                                    <div class="resume-info-item">
                                        <i class="fas fa-graduation-cap text-warning"></i>
                                        <span><%= resume.education.degree %></span>
                                    </div>
                                <% } %>
                            </div>

                            <% if (resume.skills && resume.skills.length > 0) { %>
                                <div class="resume-skills">
                                    <small class="text-muted d-block mb-1">
                                        <strong>Skills (<%= resume.skills.length %>):</strong>
                                    </small>
                                    <% resume.skills.slice(0, 5).forEach(skill => { %>
                                        <span class="skill-badge"><%= skill %></span>
                                    <% }) %>
                                    <% if (resume.skills.length > 5) { %>
                                        <span class="skill-badge bg-secondary">+<%= resume.skills.length - 5 %> more</span>
                                    <% } %>
                                </div>
                            <% } else { %>
                                <div class="text-muted small">
                                    <i class="fas fa-exclamation-triangle"></i> No skills extracted
                                </div>
                            <% } %>

                            <!-- ML Classification Info -->
                            <% if (resume.mlCategory) { %>
                                <div class="ml-info">
                                    <i class="fas fa-brain me-1"></i>
                                    ML: <%= resume.mlCategory %>
                                    <% if (resume.mlConfidence) { %>
                                        (<%= Math.round(resume.mlConfidence * 100) %>%)
                                    <% } %>
                                </div>
                            <% } %>

                            <!-- Action Buttons -->
                            <div class="mt-3 d-flex gap-2 justify-content-between">
                                <a href="/api/candidate/<%= resume._id %>" class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                <div>
                                    <button class="reprocess-btn" onclick="reprocessResume('<%= resume._id %>')">
                                        <i class="fas fa-redo"></i> Reprocess
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-cogs"></i>
                    <h3>No Processed Resumes</h3>
                    <p>No resumes have been processed yet. Upload some resumes to get started.</p>
                    <a href="/upload" class="action-btn btn-upload">
                        <i class="fas fa-upload"></i>
                        Upload Resumes
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        let isDeleting = false;

        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, attaching event listeners...');
            attachDeleteListeners();
            
            const bulkDeleteBtn = document.getElementById('bulkDeleteBtn');
            if (bulkDeleteBtn) {
                bulkDeleteBtn.addEventListener('click', deleteAllResumes);
            }

            const reprocessAllBtn = document.getElementById('reprocessAllBtn');
            if (reprocessAllBtn) {
                reprocessAllBtn.addEventListener('click', reprocessAllResumes);
            }
        });

        function attachDeleteListeners() {
            const deleteButtons = document.querySelectorAll('.delete-btn');
            console.log(`Found ${deleteButtons.length} delete buttons`);
            
            deleteButtons.forEach(button => {
                button.removeEventListener('click', handleDeleteClick);
                button.addEventListener('click', handleDeleteClick);
            });
        }

        function handleDeleteClick(event) {
            event.preventDefault();
            event.stopPropagation();
            
            const button = event.currentTarget;
            const resumeId = button.dataset.resumeId;
            const candidateName = button.dataset.candidateName;
            
            console.log('Delete clicked:', resumeId, candidateName);
            deleteResume(resumeId, candidateName);
        }

        async function deleteResume(resumeId, candidateName) {
            if (isDeleting) {
                console.log('Already deleting, please wait...');
                return;
            }
            
            if (!confirm(`Are you sure you want to delete the processed resume for "${candidateName}"?`)) {
                return;
            }

            isDeleting = true;
            const resumeElement = document.querySelector(`[data-resume-id="${resumeId}"]`);
            
            try {
                console.log(`Deleting resume ${resumeId}...`);
                
                if (resumeElement) {
                    resumeElement.classList.add('loading-resume');
                }

                const response = await fetch(`/api/resumes/${resumeId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();
                console.log('Delete result:', result);

                if (result.success) {
                    if (resumeElement) {
                        resumeElement.classList.remove('loading-resume');
                        resumeElement.classList.add('delete-animation');
                        
                        setTimeout(() => {
                            resumeElement.remove();
                            
                            const remainingResumes = document.querySelectorAll('[data-resume-id]');
                            console.log(`${remainingResumes.length} resumes remaining`);
                            
                            if (remainingResumes.length === 0) {
                                console.log('No resumes left, reloading page...');
                                location.reload();
                            }
                        }, 500);
                    }
                    
                    showMessage(`Successfully deleted processed resume for ${candidateName}`, 'success');
                } else {
                    console.error('Delete failed:', result.message);
                    alert(`Error: ${result.message}`);
                    
                    if (resumeElement) {
                        resumeElement.classList.remove('loading-resume');
                    }
                }
            } catch (error) {
                console.error('Delete error:', error);
                alert('An error occurred while deleting the resume');
                
                if (resumeElement) {
                    resumeElement.classList.remove('loading-resume');
                }
            } finally {
                isDeleting = false;
            }
        }

        async function deleteAllResumes() {
            if (isDeleting) return;

            if (!confirm('Are you sure you want to delete ALL processed resumes? This action cannot be undone!')) {
                return;
            }

            if (!confirm('This will permanently delete all processed resume data. Are you absolutely sure?')) {
                return;
            }

            isDeleting = true;
            const bulkDeleteBtn = document.getElementById('bulkDeleteBtn');
            const originalText = bulkDeleteBtn ? bulkDeleteBtn.innerHTML : '';
            
            try {
                console.log('Deleting all processed resumes...');
                
                if (bulkDeleteBtn) {
                    bulkDeleteBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Deleting...';
                    bulkDeleteBtn.disabled = true;
                }

                const response = await fetch('/api/resumes', {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();
                console.log('Bulk delete result:', result);

                if (result.success) {
                    showMessage(`Successfully deleted ${result.deletedCount} processed resumes`, 'success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    console.error('Bulk delete failed:', result.message);
                    alert(`Error: ${result.message}`);
                }
            } catch (error) {
                console.error('Bulk delete error:', error);
                alert('An error occurred while deleting resumes');
            } finally {
                isDeleting = false;
                if (bulkDeleteBtn) {
                    bulkDeleteBtn.innerHTML = originalText;
                    bulkDeleteBtn.disabled = false;
                }
            }
        }

        async function reprocessResume(resumeId) {
            if (confirm('Are you sure you want to reprocess this resume? This will re-extract all information.')) {
                showMessage('Reprocessing feature will be implemented soon', 'info');
                // TODO: Implement reprocessing API endpoint
            }
        }

        async function reprocessAllResumes() {
            if (confirm('Are you sure you want to reprocess ALL resumes? This may take a while.')) {
                showMessage('Bulk reprocessing feature will be implemented soon', 'info');
                // TODO: Implement bulk reprocessing API endpoint
            }
        }

        function showMessage(message, type) {
            console.log(`Message: ${message}`);
            
            const messageDiv = document.createElement('div');
            messageDiv.className = `alert alert-${type === 'success' ? 'success' : type === 'info' ? 'info' : 'danger'} alert-dismissible fade show position-fixed`;
            messageDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            messageDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(messageDiv);
            
            setTimeout(() => {
                if (messageDiv.parentNode) {
                    messageDiv.remove();
                }
            }, 5000);
        }
    </script>
</body>
</html>