<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/modern-dashboard.css" rel="stylesheet">
</head>
<body>
    <div class="dashboard-container">
        <!-- Back Button -->
        <a href="/" class="back-button">
            <i class="fas fa-arrow-left"></i>
            Back to Dashboard
        </a>

        <!-- Header -->
        <div class="detail-header">
            <h1 class="detail-title"><%= pageTitle %></h1>
            <p class="detail-subtitle"><%= pageSubtitle %></p>
        </div>

        <!-- Top Matches List -->
        <div class="row">
            <% if (candidates && candidates.length > 0) { %>
                <% candidates.forEach((candidate, index) => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="resume-card">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="resume-name">
                                    <%= candidate.candidateName || 'Unknown Candidate' %>
                                </h5>
                                <span class="badge bg-success fs-6"><%= candidate.matchScore %>%</span>
                            </div>
                            
                            <div class="resume-info">
                                <% if (candidate.email) { %>
                                    <div class="resume-info-item">
                                        <i class="fas fa-envelope"></i>
                                        <span><%= candidate.email %></span>
                                    </div>
                                <% } %>
                                
                                <div class="resume-info-item">
                                    <i class="fas fa-briefcase"></i>
                                    <span><%= candidate.jobTitle %></span>
                                </div>
                                
                                <div class="resume-info-item">
                                    <i class="fas fa-calendar"></i>
                                    <span><%= candidate.screeningDate ? candidate.screeningDate.toLocaleDateString() : 'Unknown' %></span>
                                </div>
                                
                                <% if (candidate.experienceYears !== undefined) { %>
                                    <div class="resume-info-item">
                                        <i class="fas fa-user-tie"></i>
                                        <span><%= candidate.experienceYears %> years exp.</span>
                                    </div>
                                <% } %>
                            </div>

                            <% if (candidate.skills && candidate.skills.length > 0) { %>
                                <div class="resume-skills">
                                    <% candidate.skills.slice(0, 5).forEach(skill => { %>
                                        <span class="skill-badge"><%= skill %></span>
                                    <% }) %>
                                    <% if (candidate.skills.length > 5) { %>
                                        <span class="skill-badge">+<%= candidate.skills.length - 5 %> more</span>
                                    <% } %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-trophy"></i>
                    <h3>No Top Matches Yet</h3>
                    <p>Complete some screening sessions to see top-scoring candidates.</p>
                    <a href="/screening" class="action-btn btn-screen">
                        <i class="fas fa-user-check"></i>
                        Start Screening
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>
